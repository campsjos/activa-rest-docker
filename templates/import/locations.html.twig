{% extends 'base.html.twig' %}

{% block title %}Hello ImportController!{% endblock %}

{% block body %}
<style>
    .example-wrapper {
        margin: 1em auto;
        max-width: 800px;
        width: 95%;
        font: 18px/1.5 sans-serif;
    }

    .example-wrapper code {
        background: #F5F5F5;
        padding: 2px 6px;
    }
</style>

<div class="example-wrapper">
    This friendly message is coming from:
    <ul>
        {% for location in locations %}
        <li>
            {{ location.name }}
            <ul>
                {% for child in location.locations %}
                <li>
                    {{ child.name }}
                    <ul>
                        {% for grandChild in child.locations %}
                        <li>
                            {{ grandChild.name }}
                        </li>
                        {% endfor %}
                    </ul>
                </li>
                {% endfor %}
            </ul>
        </li>
        {% endfor %}
    </ul>
</div>
{% endblock %}